<UserControl x:Class="LauncherSilo.AudioControls.AudioFader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LauncherSilo.AudioControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="20">
    <Grid>
        <Border Width="10" Background="Gray" Opacity="0.6" VerticalAlignment="Bottom" Height="500" CornerRadius="10" />
        <Border Width="5" Background="Black" Opacity="0.6" VerticalAlignment="Bottom" Height="500" CornerRadius="10" />


        <Border VerticalAlignment="Bottom" Height="40" BorderThickness="1" BorderBrush="White" Background="Gray" CornerRadius="8">
            <Border VerticalAlignment="Center" Height="2" Width="15" BorderThickness="1" BorderBrush="White" Background="Black" CornerRadius="1"/>
        </Border>
    </Grid>
</UserControl>
