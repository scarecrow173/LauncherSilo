<local:Overlay x:Class="LauncherSilo.Views.ContextOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherSilo.Views"
        xmlns:app="clr-namespace:LauncherSilo"
        mc:Ignorable="d"
        DataContext="{x:Static app:App.MainVM}"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#7F000000"
        Topmost = "True"
        ShowInTaskbar="False"
        Title="ContextOverlay" MouseLeftButtonDown="Window_MouseButtonDown" MouseRightButtonDown="Window_MouseButtonDown">
    <Grid>
        <WrapPanel x:Name="MainPanel">
            
        </WrapPanel>

    </Grid>
</local:Overlay>
